@model AdminApp.API.Services.EmailTemplateModel
@{
    <div style="font-size:10pt; font-family:arial;">
        You recently requested to reset your password for @Model.Username
        <br>
        <br>
        Please click <a href="@Model.Url">here</a> to reset your password.
        <br>
        <br>
        Please provide a password of
        <ul>
            <li>At least 6 characters</li>
            <li>A combination of upper and lower case characters</li>
            <li>One or more numbers</li>
        </ul>
        <br>
        <br>
        If you did not request a password reset, please ignore this email.
        <br>
        <br>
        Thank you
        <br>
        <br>
    </div>
}